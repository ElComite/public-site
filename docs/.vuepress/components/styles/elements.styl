@require './../../theme/styles/config'

$actionColor= #d8a850

footer 
    background: $actionColor
    padding: 3rem 0
    color: #000
    margin-top: 12rem

h1, h2, h3, h4 
  border: none

.section-title
  font-size: 2rem
  font-weight: lighter
  margin-bottom: 2.4rem

.container
    padding: 1rem;
    max-width: 960px;
    margin: 0px auto;

.action-button
    display inline-block
    font-size 1.2rem
    color #fff
    background-color $accentColor
    padding 0.8rem 1.6rem
    border-radius 0px
    transition background-color .1s ease
    box-sizing border-box
    border-bottom 1px solid darken($accentColor, 10%)
    &:hover
        background-color lighten($accentColor, 10%)

#hero
    background-color $accentColor
    color: #fff 
    text-align: center
    padding: 4rem 0 14rem 0
    background-image: cover 
    background-position: 50% 15%
    background-repeat: no-repeat
    h1, h2, h3, h4 
        margin: 0
        margin-bottom: 1rem
    h1 
        font-size: 3rem
        font-weight: lighter
    h2 
        text-transform: uppercase 
        font-size: 2.5rem
    h4 
        font-size: 1.5rem
        font-weight: normal
    .action-button
        background-color: lighten($actionColor, 10%)
        border: none
        color: #000
        &:hover
            background-color lighten($actionColor, 30%)


.agenda-item
    margin-bottom: 110px

    footer 
        background: #fff
        padding: 0
        margin: 0

    h5
        font-weight: normal
        font-size: 1rem
        line-height: .5rem
        margin-bottom: .5rem

    .time
        h5 
            font-size: 1.2rem

    .title 
        line-height: 1rem
        margin-bottom: 0
        font-size: 2rem
        margin-top: 1.4rem

    .talk
        font-size: 1.2rem
        h4 
            line-height: 2rem

    .speaker-cont
        position: relative
        display: block 
        margin: 0
        h5
            font-weight: normal
            font-size: 1rem
            line-height: .5rem
            margin-bottom: .5rem
        img.avatar 
            width: 110px
            height 110px
            position: absolute
            display inline-block
        .desc 
            min-height: 110px 
            margin-bottom: 2rem
            padding-left: 130px
            h4 
              img
                width: 14px
                height 14px
                display: inline-block

